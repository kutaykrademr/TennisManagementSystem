@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Tennis System Boss Admin Panel</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/fonts/iconic/css/material-design-iconic-font.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/logincss/animate/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/logincss/css-hamburgers/hamburgers.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/logincss/animsition/css/animsition.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/logincss/select2/select2.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/logincss/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/logincss/util.css" rel="stylesheet" />
    <link href="~/logincss/main.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100">
                <div class="login100-form validate-form">
                    <span class="login100-form-logo">
                        <i class="zmdi zmdi-landscape"></i>
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        Log in
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        <input class="input100" type="text" name="username" placeholder="Username" id="username">
                        <span class="focus-input100" data-placeholder="&#xf207;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <input class="input100" type="password" name="pass" placeholder="Password" id="pass">
                        <span class="focus-input100" data-placeholder="&#xf191;"></span>
                    </div>

                    <div class="contact100-form-checkbox">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                        <label class="label-checkbox100" for="ckb1">
                            Remember me
                        </label>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" onclick="Login()">
                            Login
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/logincss/animsition/js/animsition.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <!--===============================================================================================-->
    <script src="~/logincss/select2/select2.js"></script>
    <!--===============================================================================================-->
    <script src="~/logincss/daterangepicker/moment.js"></script>
    <script src="~/logincss/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/logincss/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/loginjs/main.js"></script>


    <script>
        function Login() {
            $.ajax({
                type: "GET",
                url: './Home/LoginUser',
                cache: false,
                data: { "user": $("#username").val(), "pass": $("#pass").val() },
                success: function (res) {
                    if (res == "true") {
                        window.location.href = "../Anasayfa";
                    }
                    else {

                        alert("false");
                            
                   
                    }
                }
            });
        }
    </script>
</body>



</html>
